
<h1> <%= @category.name %> </h1>
<% @category.items.each do |item| %>
  <div>
    <h2><a href="/items/<%= item.id %>"><%= item.name %></a> (<%= item.quantity %>)</h2>
  </div>
<% end %>

<button class="btn btn-default"><a href="/items/new">Add Items</a></button>

<button class="btn btn-default"><a href="/categories/<%= @category.id %>/edit">Edit </a></button>

<form action="/categories/<%=@category.id %>/delete" method="post">
  <input type="hidden" id="hidden" name="_method" value="delete">
  <input type="submit" class="btn btn-danger" value="delete category">
</form>
